
{% extends 'base.html.twig' %}
 
{% block body %}





{% for item in personal %}

		{% if check == 0 %}

			<h2 style="text-align:center;color:blue;">Player Selected : {{item.nameLast }},{{ item.nameFirst }}</h2>

		{% else %}
		
			<h2 style="text-align:center;color:blue;">Random Player Selected : {{item.nameLast }},{{ item.nameFirst }}</h2>
		
		{% endif %}
		
{% endfor %}
<hr></hr>

<div class="container">  

	<ul class="nav nav-tabs">
	  <li class="active"><a data-toggle="tab" href="#home">Personal</a></li>
	  <li><a data-toggle="tab"  href="#menu1">Awards</a></li>
	  <li><a data-toggle="tab"  href="#menu2">Appearances</a></li>
	  <li><a data-toggle="tab"  href="#menu3">Batting</a></li>
	  <li><a data-toggle="tab"  href="#menu4">Fielding</a></li>
	  <li><a data-toggle="tab"  href="#menu5">Salary</a></li>
	  <li><a data-toggle="tab"  href="#menu6">Managers</a></li>
	</ul>

<div class="tab-content">

  <div id="home" class="tab-pane fade in active">
    
	
<table class = "table table-striped table-hover table-bordered ">
   
   <thead>
		<tr>
			<td><b>Born</b></div>
			<td><b>State</b></div>
			<td><b>Country</b></div>
			<td><b>Died</b></div>
			<td><b>State</b></div>
			<td><b>Height</b></div>
			<td><b>Weight</b></div>
			<td><b>Throws</b></div>
			<td><b>Debut</b></div>
			<td><b>Final</b></div>
		</tr>
	</thead>
	
	{% for item in personal %}
	
	<tbody>
		<tr>  
			<td>{{item.birthMonth }}/{{item.birthDay}}/{{item.birthYear }}</div>
			<td>{{item.birthState}}</div>
			<td>{{item.birthCountry}}</div>
			<td>{{item.deathMonth             | default("") }}/{{item.deathDay | default("") }}/{{item.deathYear | default("")}}</div>
			<td>{{item.deathState             | default('N/A')}}</div>
			<td>{{item.deathCountry           | default('N/A')}}</div>
			<td>{{item.height                 | default('N/A')}}</div>
			<td>{{item.throws                 | default('N/A')}}</div>
			<td>{{item.debut |date("m/d/Y")   | default('N/A')}}</div>
			<td>{{item.finalGame|date("m/d/Y")| default('N/A')}}</div>
		</tr>
	</tbody>
	
	{% endfor %}
	
</table>
	
	
	
	
			
   </div>
  
  <div id="menu1" class="tab-pane fade">
  
			
	<table class = "table table-striped table-hover table-bordered table-condensed ">
  
	   <thead>
			<tr>
				<td><b>Award</b></td>
				<td><b>Year</b></td>
				<td><b>League</b></td>
			</tr>
		</thead>
					  
		{% for item in award %}
		<tbody>
			<tr>		  
					<td>{{item.awardID }}</td>
					<td>{{item.yearID}}</td>
					<td>{{item.lgID}}</td>
			</tr>
		</tbody>			 
					  
		{% endfor %}
	
	</table>
   
  </div>
  
  <div id="menu2" class="tab-pane fade">
  
	  <table class = "table table-striped table-hover table-bordered table-condensed">
	  
		   <thead>
				<tr>
					<td><b>Team</b></td>
					<td><b>Year</b></td>
					<td><b>League</b></td>
				</tr>
			</thead>
						  
			{% for item in appearances %}
			<tbody>
				<tr>	
						<td>{{item.teamID }}</td>
						<td>{{item.yearID}}</td>
						<td>{{item.LgID}}</td>
					
				</tr>
			</tbody>			 
						  
			{% endfor %}
		
	   </table>
	
   </div>
   
   <div id="menu3" class="tab-pane fade">
  
  
	<table class = "table table-striped table-hover table-bordered table-condensed">
  
		<thead>
			<tr>
						   <td><b>Year</b></div>
						   <td><b>Team</b></div>
						   <td><b>Games</b></div>
						   <td><b>AB</b></div>
						   <td><b>R</b></div>
						   <td><b>H</b></div>
						   <td><b>HR</b></div>
						   <td><b>RBI</b></div>
						   <td><b>SB</b></div>         
						   <td><b>BB</b></div>
						   <td><b>SO</b></div>
						   <td><b>HBP</b></div>
			
			</tr>			
						   
		</thead> 
					   
					{% for item in batting %}   
					
		<tbody>
			<tr>
					 	 
						<td> {{ item.yearID }}</td> 
						<td> {{ item.teamID }}</td> 
						<td> {{ item.G}}</td> 
						<td> {{ item.AB}}</td> 
						<td> {{ item.R}}</td> 
						<td> {{ item.H}}</td> 
						<td> {{ item.HR}}</td> 
						<td> {{ item.RBI}}</td> 
						<td> {{ item.SB}}</td> 
						<td> {{ item.BB}}</td> 
						<td> {{ item.SO}}</td> 						 
						<td> {{ item.HBP}}</td> 
					  
			</tr>		 
		</tbody>
					 
					{% endfor %}	
	</table>
	
	
	
	
	
	
   </div>
   
   
   <div id="menu4" class="tab-pane fade">
  
		 <table class = "table table-striped table-hover table-bordered table-condensed ">
  
		<thead>
			<tr>
			   <td><b>Year</b></td>
			   <td><b>Team</b></td>
			   <td><b>League</b></td>
			   <td><b>POS</b></td>
			   <td><b>InnOuts</b></td>
			   <td><b>PO</b></td>
			   <td><b>A</b></td>
			   <td><b>E</b></td>
			   <td><b>DP</b></td>
			   <td><b>PB</b></td>
			</tr>
		</thead>

		
		<tbody>
			<tr>
					   
				{% for item in fielding %}   
					 
					 	 
				<td> {{ item.yearID }}</td> 
				<td> {{ item.teamID }}</td> 
				<td> {{ item.lgID}}</td> 
				<td> {{ item.POS}}</td> 
				<td> {{ item.G}}</td> 
				<td> {{ item.GS}}</td> 
				<td> {{ item.InnOuts}}</td> 
				<td> {{ item.PO}}</td> 
				<td> {{ item.A}}</td> 
				<td> {{ item.E}}</td> 
				<td> {{ item.PB}}</td> 
			</tr>
		</tbody>	
		
				{% endfor %}
	</table>
	
	
	
	
	
   </div>
   
   
   
   <div id="menu5" class="tab-pane fade">
  
			
	<table class = "table table-striped table-hover table-bordered table-condensed ">
  
	   <thead>
			<tr>
				<td><b>Year</b></td>
				<td><b>Team</b></td>
				<td><b>Salary</b></td>
			</tr>
		</thead>
					  
		{% for item in salary %}
		<tbody>
			<tr>		  
					<td>{{item.yearID }}</td>
					<td>{{item.teamID}}</td>
					<td>{{ item.salary |number_format(2, '.', ',') }}</td>
			</tr>
		</tbody>			 
					  
		{% endfor %}
	
	</table>
   
  </div>
  
   <div id="menu6" class="tab-pane fade">
  
			
	<table class = "table table-striped table-hover table-bordered table-condensed ">
  
	   <thead>
			<tr>
				<td><b>Manager</b></td>
				<td><b>Year</b></td>
				<td><b>Team</b></td>
			</tr>
		</thead>
					  
		{% for item in manager %}
		<tbody>
			<tr>		  
					<td>{{item.nameLast}} , {{ item.nameFirst }}</td>
					<td>{{item.yearID}}</td>
					<td>{{item.teamID}}</td>
			</tr>
		</tbody>			 
					  
		{% endfor %}
	
	</table>
   
  </div>
   
   
   
   
   
   
   
   
  
  
 </div>


{% endblock %}










 

 